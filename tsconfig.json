{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}